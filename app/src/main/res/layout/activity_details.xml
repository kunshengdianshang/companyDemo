<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailsActivity"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_hand_pick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:layout_width="match_parent"
                android:layout_height="381dp"
                android:background="@mipmap/banner_img">
            </com.youth.banner.Banner>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ "
                    android:textSize="@dimen/dp_14"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"/>
                <TextView
                    android:id="@+id/details_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="199.00"
                    android:textSize="@dimen/dp_24"
                    android:textColor="#000000"
                    android:layout_marginTop="@dimen/dp_13"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ 100.00"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#929292"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_16">
                    <ImageView
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/ic_launcher"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textColor="#252525"
                        android:textSize="@dimen/sp_9"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_16">
                    <ImageView
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/ic_launcher"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享"
                        android:textColor="#252525"
                        android:textSize="@dimen/sp_9"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MERBLISS全棉针织条纹四件套新款上市性价比高超火爆ins四件套"
                android:maxLines="2"
                android:lines="2"
                android:textSize="@dimen/sp_15"
                android:textColor="#252525"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_27"
                android:lineSpacingExtra="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_25">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#252525"
                    android:textSize="@dimen/sp_13"
                    android:text="领劵"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </androidx.recyclerview.widget.RecyclerView>
                <ImageView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="@dimen/dp_15"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#252525"
                    android:textSize="@dimen/sp_13"
                    android:text="选择"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#282828"
                    android:textSize="@dimen/sp_13"
                    android:text="蓝色，2件"/>
                <ImageView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="@dimen/dp_15"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F0F0F0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#252525"
                    android:textSize="@dimen/sp_13"
                    android:text="用户评价(2365)"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8D8D8D"
                    android:textSize="@dimen/sp_11"
                    android:text="99.0%好评率"
                    android:layout_marginRight="@dimen/dp_12"/>
                <ImageView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="@dimen/dp_15"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F0F0F0"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_89">
            </androidx.recyclerview.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F0F0F0" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_225">
            </androidx.recyclerview.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F0F0F0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:text="产品介绍"
                android:textSize="@dimen/sp_15"
                android:textColor="#282828"
                android:gravity="center"/>
            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/web_detail"
                tools:ignore="WebViewLayout" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>