<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:orientation="vertical"
    android:background="#F0F0F0">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <ImageView
            android:id="@+id/register_return"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_20"
            android:background="@mipmap/return_img"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机注册"
            android:textColor="#252525"
            android:textSize="@dimen/sp_16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码已发送到您的手机"
        android:textColor="#252525"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_11"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="@dimen/sp_12"
            android:textColor="#252525"
            android:layout_marginLeft="@dimen/dp_22"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请填写验证码"
            android:textColor="#8D8D8D"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_20"
            android:background="@mipmap/huoqu_yanzhengma"
            android:text="获取验证码"
            android:textColor="#252525"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_24"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码"
            android:textSize="@dimen/sp_12"
            android:textColor="#252525"
            android:layout_marginLeft="@dimen/dp_22"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="6-20位字母、数字组合"
            android:textColor="#8D8D8D"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_24"
            android:src="@mipmap/xianshi" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_42"
        android:src="@mipmap/weizhuce"
        android:scaleType="fitXY"/>
</LinearLayout>