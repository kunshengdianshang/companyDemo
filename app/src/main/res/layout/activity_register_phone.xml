<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterPhoneActivity"
    android:background="#F0F0F0">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <ImageView
            android:id="@+id/register_return"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_20"
            android:background="@mipmap/return_img"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机注册"
            android:textColor="#252525"
            android:textSize="@dimen/sp_16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码将发送到您的手机"
        android:textColor="#252525"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_11"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="@dimen/sp_12"
            android:textColor="#252525"
            android:layout_marginLeft="@dimen/dp_22"/>
        <EditText
            android:id="@+id/register_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请填写注册手机号"
            android:textColor="#8D8D8D"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_11"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/register_phone_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/xaiyibu"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_15"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_35">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="已有账号?"
            android:textColor="#8D8D8D"
            android:layout_marginRight="@dimen/dp_9"/>
        <ImageView
            android:id="@+id/login_go"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/denglu"
            android:scaleType="fitXY"/>
    </LinearLayout>
</LinearLayout>