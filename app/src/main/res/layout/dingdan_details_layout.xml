<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_EFEFEF"
    >
    <LinearLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_169"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_29"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_21"
            android:layout_height="@dimen/dp_80">
            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="@dimen/dp_81"
                android:layout_height="@dimen/dp_81"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/text_title"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:gravity="start"
                android:layout_width="@dimen/dp_194"
                android:layout_height="@dimen/dp_28"
                android:text="商品Title"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/black_252525"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_24"
                android:layout_below="@+id/text_title"
                android:id="@+id/text_data"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品参数"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/gray_8d8d8d"
                />
            <LinearLayout
                android:id="@+id/linear_one_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/black_252525"
                    android:textSize="@dimen/sp_11"
                    />
                <TextView
                    android:id="@+id/text_price"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88.00"
                    android:textColor="@color/black_252525"
                    android:textSize="@dimen/sp_12"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/linear_one_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textColor="@color/gray_8d8d8d"
                    android:textSize="@dimen/sp_10"
                    />
                <TextView
                    android:id="@+id/text_count"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/gray_8d8d8d"
                    android:textSize="@dimen/sp_10"
                    />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_6"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/text_xiaoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品小计: ¥ "
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/black_252525"
                        />
                    <TextView
                        android:layout_toRightOf="@+id/text_xiaoji"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="88.88"
                        android:textColor="@color/black_252525"
                        android:textSize="@dimen/sp_13"
                        android:layout_marginRight="@dimen/dp_20"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运费:    "
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/black_252525"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="包邮  "
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/black_252525"
                        />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>