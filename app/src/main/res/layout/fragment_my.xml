<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_hand_pick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="#FFCF31"
                />

            <!--
                头像设置 店铺关注
            -->
            <LinearLayout
                android:background="#FFCF31"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_17"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:background="#FFCF31"
                    >
                    <ImageView
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_17"
                        android:src="@mipmap/ic_launcher"
                        />
                    <ImageView
                        android:layout_marginRight="@dimen/dp_18"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_17"
                        android:src="@mipmap/ic_launcher"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_72">
                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="@dimen/dp_72"
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/img_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:text="登录/注册"
                        android:textColor="#fff"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#FFCF31"
                    >
                    <RelativeLayout
                        android:layout_marginRight="@dimen/dp_47"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:id="@+id/linear_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >

                            <View
                                android:layout_width="@dimen/dp_11"
                                android:layout_height="@dimen/dp_1"
                                android:background="#fff" />

                            <View
                                android:layout_width="@dimen/dp_11"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginLeft="@dimen/dp_2"
                                android:background="#fff" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/text_shoucang"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:layout_below="@+id/linear_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏夹"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_16"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/my_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:id="@+id/linear_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >

                            <View
                                android:layout_width="@dimen/dp_11"
                                android:layout_height="@dimen/dp_1"
                                android:background="#fff" />

                            <View
                                android:layout_width="@dimen/dp_11"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginLeft="@dimen/dp_2"
                                android:background="#fff" />
                        </LinearLayout>
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:layout_below="@+id/linear_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注店铺"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_16"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="@dimen/dp_54"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:id="@+id/linear_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >

                            <View
                                android:layout_width="@dimen/dp_11"
                                android:layout_height="@dimen/dp_1"
                                android:background="#fff" />

                            <View
                                android:layout_width="@dimen/dp_11"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginLeft="@dimen/dp_2"
                                android:background="#fff" />
                        </LinearLayout>
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:layout_below="@+id/linear_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="足迹"
                            android:textColor="#fff"
                            android:textSize="@dimen/sp_16"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <!--
               订单付款
            -->
            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="@dimen/dp_8"
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_88">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/img_dingdan"
                            android:layout_marginTop="@dimen/dp_28"
                            android:layout_centerHorizontal="true"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@mipmap/ic_launcher"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/dp_12"
                            android:gravity="center"
                            android:layout_below="@+id/img_dingdan"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14"
                            android:text="我的订单"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/img_daifukuan"
                            android:layout_marginTop="@dimen/dp_28"
                            android:layout_centerHorizontal="true"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@mipmap/ic_launcher"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/dp_12"
                            android:gravity="center"
                            android:layout_below="@+id/img_daifukuan"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14"
                            android:text="待付款"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/img_daishouhuo"
                            android:layout_marginTop="@dimen/dp_28"
                            android:layout_centerHorizontal="true"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@mipmap/ic_launcher"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/dp_12"
                            android:gravity="center"
                            android:layout_below="@+id/img_daishouhuo"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14"
                            android:text="待收货"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/img_daipingjia"
                            android:layout_marginTop="@dimen/dp_28"
                            android:layout_centerHorizontal="true"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@mipmap/ic_launcher"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/dp_12"
                            android:gravity="center"
                            android:layout_below="@+id/img_daipingjia"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14"
                            android:text="待评价"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/img_shouhou"
                            android:layout_marginTop="@dimen/dp_28"
                            android:layout_centerHorizontal="true"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:src="@mipmap/ic_launcher"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/dp_12"
                            android:gravity="center"
                            android:layout_below="@+id/img_shouhou"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_14"
                            android:text="退换/售后"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--
               我的特权
            -->
            <androidx.cardview.widget.CardView
                android:paddingBottom="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="@dimen/dp_8"
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_90">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的特权"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#000000"
                        />
                    <View
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#B5B5B5"
                        />
                    <LinearLayout
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:id="@+id/my_in"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img_ruzhu"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:layout_below="@+id/img_ruzhu"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14"
                                android:text="商家入驻"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img_tuiguang"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:layout_below="@+id/img_tuiguang"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14"
                                android:text="推广中心"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img_edu"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:layout_below="@+id/img_edu"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14"
                                android:text="免单额度"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img_shiming"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:id="@+id/text_shiming"
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:layout_below="@+id/img_shiming"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14"
                                android:text="实名认证"
                                />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--
               工具与服务
            -->
            <androidx.cardview.widget.CardView
                android:paddingBottom="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="@dimen/dp_8"
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_95">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工具与服务"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#000000"
                        />
                    <View
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#B5B5B5"
                        />
                    <LinearLayout
                        android:layout_marginBottom="@dimen/dp_2"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img_qianbao"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:layout_below="@+id/img_qianbao"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14"
                                android:text="开店技巧"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img_kaidianjiqiao"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:layout_below="@+id/img_kaidianjiqiao"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14"
                                android:text="开店技巧"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img_kehufuwu"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:layout_below="@+id/img_kehufuwu"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14"
                                android:text="kehufuwu"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <ImageView
                                android:id="@+id/img_zhutihuanfu"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/dp_25"
                                android:layout_height="@dimen/dp_25"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:layout_below="@+id/img_zhutihuanfu"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="@dimen/sp_14"
                                android:text="主题换肤"
                                />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
