<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyCollectedActivity"
    android:background="@color/colorAccent"
    >
     <!--
         title
     -->

    <RelativeLayout
        android:id="@+id/rela_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="#FFCF31"
        >

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textSize="@dimen/sp_16"
            android:textColor="#252525"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/text_guanli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理"
            android:textColor="#252525"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rela_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#FFCF31"
        />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_below="@+id/rela_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

            <androidx.core.widget.NestedScrollView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <androidx.recyclerview.widget.RecyclerView

                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recy"

                        />
                    <!--
                          购物车无数据View
                    -->


                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_12"
                        app:cardCornerRadius="@dimen/dp_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="@dimen/dp_51"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/dp_245"
                                android:layout_height="@dimen/dp_250"
                                android:src="@mipmap/no_shop"
                                />
                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_237"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="购物车暂无内容~"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#505050"
                                />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <!--
                       为你推荐
                    -->
                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="@dimen/dp_203"
                        android:layout_height="@dimen/dp_38"
                        android:text="为你推荐"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:background="@mipmap/weinituijian_bg"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="@dimen/dp_13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/recy_weinituijian"
                            />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <!--
        底部结算
    -->
    <RelativeLayout
        android:id="@+id/rela_bottom"
        android:background="#E7E7E7"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/img_all"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/icon_weixuanze"
            />
        <TextView
            android:layout_toRightOf="@+id/img_all"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textColor="#252525"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/text_qujiesuan"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_73"
            android:layout_height="@dimen/dp_29"
            android:text="去结算"
            android:textSize="@dimen/sp_12"
            android:textColor="#252525"
            android:background="@drawable/btn_radio_yellow"
            />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_toLeftOf="@+id/text_qujiesuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:"
                android:textColor="#252525"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="@dimen/sp_10"
                android:textColor="#C93838"
                android:gravity="center"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="41.0"
                android:textColor="#C93838"
                android:textSize="@dimen/sp_13"

                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>