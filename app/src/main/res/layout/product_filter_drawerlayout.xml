<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--这是侧边栏滑动时出现的右边布局内容-->
    <RelativeLayout
        android:id="@+id/drawer_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务/折扣"
                android:textSize="@dimen/sp_12"
                android:textColor="#252525"
                android:layout_marginLeft="@dimen/dp_19"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_25">
                <TextView
                    android:id="@+id/tv_exemption"
                    android:layout_width="@dimen/dp_69"
                    android:layout_height="@dimen/dp_21"
                    android:gravity="center"
                    android:text="包邮"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#252525"
                    android:clickable="true"
                    android:background="@mipmap/yuanjiao1"/>
                <TextView
                    android:layout_width="@dimen/dp_69"
                    android:layout_height="@dimen/dp_21"
                    android:gravity="center"
                    android:text="促销"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#252525"
                    android:clickable="true"
                    android:background="@mipmap/yuanjiao1"
                    android:layout_marginLeft="@dimen/dp_30"/>
                <TextView
                    android:layout_width="@dimen/dp_69"
                    android:layout_height="@dimen/dp_21"
                    android:gravity="center"
                    android:text="货到付款"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#252525"
                    android:clickable="true"
                    android:background="@mipmap/yuanjiao1"
                    android:layout_marginLeft="@dimen/dp_30"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_19">
                <TextView
                    android:layout_width="@dimen/dp_69"
                    android:layout_height="@dimen/dp_21"
                    android:gravity="center"
                    android:text="新品"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#252525"
                    android:clickable="true"
                    android:background="@mipmap/yuanjiao1"/>
                <TextView
                    android:layout_width="@dimen/dp_69"
                    android:layout_height="@dimen/dp_21"
                    android:gravity="center"
                    android:text="七天内退货"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#252525"
                    android:clickable="true"
                    android:background="@mipmap/yuanjiao1"
                    android:layout_marginLeft="@dimen/dp_30"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格区间"
                android:textSize="@dimen/sp_12"
                android:textColor="#252525"
                android:layout_marginTop="@dimen/dp_34"
                android:layout_marginLeft="@dimen/dp_20"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_20">

                <EditText
                    android:id="@+id/et_low_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_21"
                    android:hint="最低价"
                    android:text=""
                    android:textSize="11sp"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@mipmap/yuanjiao3"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="#000"/>

                <EditText
                    android:id="@+id/et_high_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_21"
                    android:hint="最高价"
                    android:text=""
                    android:textSize="11sp"
                    android:background="@mipmap/yuanjiao3"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_marginRight="@dimen/dp_15"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#E5E5E5"
                android:layout_marginTop="@dimen/dp_30"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌"
                android:textSize="@dimen/sp_12"
                android:textColor="#252525"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_27"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/reset"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_23"
                android:background="@mipmap/yuanjiao4"
                android:text="重置"
                android:textColor="#252525"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_70"/>

            <TextView
                android:id="@+id/determine"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_23"
                android:background="@mipmap/yuanjiao5"
                android:text="完成"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>