<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dp_13"
    android:id="@+id/linearLayout">
    <ImageView
        android:layout_width="@dimen/dp_129"
        android:layout_height="@dimen/dp_129"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="蓝雪 冷冻大西洋红鱼柳 400g 3片 袋装 海 鲜水产"
            android:textSize="@dimen/dp_11"
            android:textColor="#252525"
            android:maxLines="2"
            android:lines="2"
            android:lineSpacingExtra="@dimen/dp_5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¥43.6"
            android:textSize="@dimen/dp_13"
            android:textColor="#C93838"
            android:layout_marginTop="@dimen/dp_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_5">
            <TextView
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_14"
                android:text="包邮"
                android:textColor="#FFCF31"
                android:background="@mipmap/yuanjiao"
                android:textSize="@dimen/dp_11"
                android:gravity="center"/>
            <TextView
                android:layout_width="@dimen/dp_78"
                android:layout_height="@dimen/dp_14"
                android:text="每满129减30"
                android:textColor="#FFCF31"
                android:background="@mipmap/yuanjiao2"
                android:textSize="@dimen/dp_11"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_6"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="98%好评"
            android:textSize="@dimen/sp_11"
            android:textColor="#8D8D8D"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="今锦上生鲜自营旗舰店 >"
            android:textSize="@dimen/sp_11"
            android:textColor="#8D8D8D"/>
